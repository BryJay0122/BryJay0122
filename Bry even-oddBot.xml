<xml xmlns="http://www.w3.org/1999/xhtml">
  <variables>
    <variable type="number" id="stake">_stake</variable>
    <variable type="number" id="profit">profit</variable>
    <variable type="number" id="loss_count">loss_count</variable>
    <variable type="number" id="target_profit">TargetProfit</variable>
    <variable type="string" id="trade_type">trade_type</variable>
  </variables>

  <block type="before_purchase" id="before_purchase_block" collapsed="true" x="0" y="0">
    <statement name="BEFOREPURCHASE_STACK">
      <block type="variables_set" id="set_trade_type">
        <field name="VAR" id="trade_type">trade_type</field>
        <value name="VALUE">
          <block type="logic_boolean">
            <field name="BOOL">FALSE</field>
          </block>
        </value>
      </block>
    </statement>
  </block>

  <block type="controls_if" id="check_odd_even" x="10" y="100">
    <value name="IF0">
      <block type="logic_compare">
        <field name="OP">EQ</field>
        <value name="A">
          <block type="math_number">
            <field name="NUM">1</field> <!-- Replace with actual number representing the trade outcome -->
          </block>
        </value>
        <value name="B">
          <block type="math_number">
            <field name="NUM">1</field> <!-- Check for odd -->
          </block>
        </value>
      </block>
    </value>
    <statement name="DO0">
      <block type="variables_set" id="set_profit_odd">
        <field name="VAR" id="profit">profit</field>
        <value name="VALUE">
          <block type="math_number">
            <field name="NUM">stake * 2</field> <!-- Example logic for winning a trade -->
          </block>
        </value>
      </block>
    </statement>
    <next>
      <block type="controls_if" id="check_loss">
        <value name="IF0">
          <block type="logic_compare">
            <field name="OP">EQ</field>
            <value name="A">
              <block type="math_number">
                <field name="NUM">0</field>
              </block>
            </value>
            <value name="B">
              <block type="math_number">
                <field name="NUM">0</field> <!-- Checks for losing condition -->
              </block>
            </value>
          </block>
        </value>
        <statement name="DO0">
          <block type="variables_set" id="increment_loss">
            <field name="VAR" id="loss_count">loss_count</field>
            <value name="VALUE">
              <block type="math_change" id="change_loss">
                <field name="VAR" id="loss_count">loss_count</field>
                <value name="NUM">1</value>
              </block>
            </value>
          </block>
        </statement>
      </block>
    </next>
  </block>
</xml>
