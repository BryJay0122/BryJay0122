<xml version="1.0" encoding="UTF-8"?>
<BinaryOptionsBot>
    <Parameters>
        <Market>Volatility 100 Index</Market>
        <CandleInterval>10</CandleInterval> <!-- Interval in seconds -->
        <StartingInvestment>1.0</StartingInvestment>
        <MaxLossesAllowed>3</MaxLossesAllowed>
        <MaxDrawdownLimit>20</MaxDrawdownLimit> <!-- Percentage -->
    </Parameters>
    
    <Indicators>
        <Indicator>
            <Name>FastSMA</Name>
            <Type>SMA</Type>
            <Period>5</Period>
        </Indicator>
        <Indicator>
            <Name>SlowSMA</Name>
            <Type>SMA</Type>
            <Period>15</Period>
        </Indicator>
        <Indicator>
            <Name>RSI</Name>
            <Type>RSI</Type>
            <Period>14</Period>
            <Overbought>70</Overbought>
            <Oversold>30</Oversold>
        </Indicator>
    </Indicators>

    <TradingConditions>
        <BuyRule>
            <Condition>FastSMA > SlowSMA</Condition>
            <Condition>RSI < 70</Condition>
        </BuyRule>
        <SellRule>
            <Condition>FastSMA < SlowSMA</Condition>
            <Condition>RSI > 30</Condition>
        </SellRule>
    </TradingConditions>

    <RiskManagement>
        <TakeProfit>2</TakeProfit> <!-- In percentage -->
        <StopLoss>1</StopLoss> <!-- In percentage -->
    </RiskManagement>

    <Alerts>
        <Alert>
            <Type>Success</Type>
            <Message>Trade executed successfully.</Message>
        </Alert>
        <Alert>
            <Type>Error</Type>
            <Message>An error occurred during trade execution.</Message>
        </Alert>
    </Alerts>
</BinaryOptionsBot>
</xml>
